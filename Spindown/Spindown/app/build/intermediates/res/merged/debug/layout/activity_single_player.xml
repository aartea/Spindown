<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="badassapps.aaron.spindown.SinglePlayer">

    <TextView
        android:layout_height="120dp"
        android:layout_width="220dp"
        android:background="#da5632"
        android:id="@+id/topPlayerTop"
        android:layout_alignTop="@+id/topLeft"
        android:layout_alignLeft="@+id/topLeft"
        android:layout_alignStart="@+id/topLeft"
        android:layout_above="@+id/topPlayerBottom"/>
    <TextView
        android:layout_height="120dp"
        android:layout_width="220dp"
        android:background="#da5632"
        android:id="@+id/topPlayerBottom"
        android:layout_below="@+id/topLeft"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_height="120dp"
        android:layout_width="220dp"
        android:id="@+id/topLeft"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/topRight"
        android:layout_alignStart="@+id/topRight"/>

    <Button
        android:layout_height="120dp"
        android:layout_width="220dp"
        android:visibility="invisible"
        android:id="@+id/topRight"
        android:layout_below="@+id/topLeft"
        android:layout_centerHorizontal="true"/>

    <!--Our bottom half-->

    <TextView
        android:layout_height="120dp"
        android:layout_width="220dp"
        android:background="#53ed6d"
        android:layout_alignTop="@+id/bottomLeft"
        android:layout_alignLeft="@+id/bottomLeft"
        android:layout_alignStart="@+id/bottomLeft"
        android:layout_alignBottom="@+id/bottomRight"/>
    <Button
        android:layout_height="120dp"
        android:layout_width="220dp"
        android:id="@+id/bottomLeft"
        android:visibility="invisible"
        android:layout_below="@+id/topPlayerBottom"
        android:layout_alignLeft="@+id/topPlayerBottom"
        android:layout_alignStart="@+id/topPlayerBottom"/>

    <Button
        android:layout_height="120dp"
        android:layout_width="220dp"
        android:visibility="invisible"
        android:id="@+id/bottomRight"
        android:layout_below="@+id/bottomLeft"
        android:layout_alignLeft="@+id/topPlayerBottom"/>
</RelativeLayout>
